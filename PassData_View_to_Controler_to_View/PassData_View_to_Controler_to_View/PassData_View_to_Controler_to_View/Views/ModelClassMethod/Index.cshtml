@model PassData_View_to_Controler_to_View.Models.ModelMethodClass

<fieldset>
    <legend>ModelClass Method Simple Example</legend>
    @using (Html.BeginForm("Index", "ModelClassMethod"))
    {

        <ol>
            <li>
                @Html.Label("FirstName")
                @Html.TextBoxFor(a=>a.firstname)
            </li>
            <li>
                @Html.Label("LastName")
                @Html.TextBoxFor(b=>b.lastname)
            </li>
            <li>
                <h3> Your Name : @ViewBag.Name</h3>
            </li>
        </ol>
        <button>Submit</button>
    }
</fieldset>

